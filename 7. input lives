                        if errorcounter < 1 or errorcounter > 10:
                            print()
                            print("Error! The amount of guesses can only be between 1 to 10.")
                            print("Try again!")

                    # If the user does not input an integer:

                    except ValueError:
                        print()
                        print("Error! An integer was not inputted. Try again!")

