
# 7. Inputting lower and upper boundary commands

import random

lower = 1
upper = 0
errorcounter = -1
while lower > upper:
    try:
        print()
        lower = int(input("Please enter a lower boundary integer: "))
        print()
        upper = int(input("Now, please enter an upper boundary integer: "))

        # Error correction loop and number generator command:

        if lower > upper:
            print()
            print("(INVALID_INPUT FUNCTION)")
        if lower <= upper:
            x = random.randint(lower, upper)

    # If the user does not input an integer:

    except ValueError:
        print()
        print("(ERROR_CORRECTION FUNCTION)")
        lower = 1
        upper = 0

    # CALCUATING SECRET NUMBER + Entering preferred mode:

    if lower <= upper:
        print()
